{
    "compilerOptions": {
      "sourceMap": true,
      "target": "es5",
      "lib": [
        "es6",
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "baseUrl": "src",
      "paths": {
        "@/*": ["./*"]
      },
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "esnext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "suppressImplicitAnyIndexErrors": true,
      "noEmit": true,
      "jsx": "react"
    },
    "include": 
      ["next-env.d.ts", "twin.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": [
      "node_modules",
      "**/node_modules/*"
    ]
  }